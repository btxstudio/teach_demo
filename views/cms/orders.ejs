<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>旅游预订平台CMS-订单列表页</title>
    <style>
        .form-control[disabled]{
            background-color: rgba(0,0,0,.1) !important;
            border: none !important;
        }
    </style>

    <%- include("common/header_js") %>
</head>

<body>
    
    <!-- 顶部工具栏 -->
    <%- include("common/header") %>

    <div class="d-flex align-items-stretch">
        
        <!-- 左侧边栏导航 -->
        <%- include("common/nav_aside") %>

        <!-- 右侧订单列表 -->
        <div class="page-content">
            <div class="page-header">
                <div class="container-fluid">
                    <h2 class="h5 no-margin-bottom">订单列表管理界面</h2>
                </div>
            </div>
            
            <%- include("common/user_count") %>
            
            <section class="no-padding-top">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="block margin-bottom-sm" id="editeArea">
                                <div class="title"><strong>订单信息列表</strong></div>

                                <!-- 编辑弹窗 -->
                                <div id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" class="modal fade text-left">
                                    <div role="document" class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header"><strong id="exampleModalLabel" class="modal-title">订单详情面板</strong>
                                                <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">×</span></button>
                                            </div>
                                            <div class="modal-body">
                                                <form>
                                                    <div class="form-group">
                                                        <label>预订产品</label>
                                                        <input type="text" name="pro_name" class="form-control" disabled>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>预订人</label>
                                                        <input type="text" name="uname" class="form-control" disabled>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>预订邮箱</label>
                                                        <input type="text" name="email" class="form-control" disabled>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>预订时间</label>
                                                        <input type="text" name="date" class="form-control" disabled>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>信息留言</label>
                                                        <textarea name="message" class="form-control" disabled></textarea>
                                                    </div>
                                                </form>

                                            </div>
                                            <div class="modal-footer">
                                                <button data-del-btn type="button" data-dismiss="modal" class="btn btn-primary">删除订单</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>订单号</th>
                                                <th>预定产品</th>
                                                <th>预定人</th>
                                                <th>预定手机</th>
                                                <th>预定时间</th>
                                                <th>成人数</th>
                                                <th>孩童数</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            
                                            <% for(let i = 0; i<data.length; i++){ %>
                                            <tr data-toggle="modal" data-target="#myModal" data-id="<%= data[i]._id %>" data-pro_name="<%= data[i].pro_name %>" data-uname="<%= data[i].uname %>" data-date="<%= data[i].date %>" data-email="<%= data[i].email %>" data-message="<%= data[i].message %>">
                                                <th scope="row">
                                                    <%= i+1 %>
                                                </th>
                                                <td>
                                                    <%= data[i]._id %>
                                                </td>
                                                <td>
                                                    <%= data[i].pro_name %>
                                                </td>
                                                <td>
                                                    <%= data[i].uname %>
                                                </td>
                                                <td>
                                                    <%= data[i].tel %>
                                                </td>
                                                <td>
                                                    <%= data[i].date %>
                                                </td>
                                                <td>
                                                    <%= data[i].adults %>
                                                </td>
                                                <td>
                                                    <%= data[i].kids %>
                                                </td>
                                            </tr>
                                            <% } %>
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

    </div>

    <%- include("common/footer_js") %>

    <script src="/js/editPannel.js"></script>
    <script>
        new window.external.editePannel("#editeArea", {
            del_api: "/travel/pro_order/api/del"
        });
    </script>
</body>

</html>